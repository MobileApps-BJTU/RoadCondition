<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fastScrollEnabled="true"
    android:orientation="vertical"
    android:scrollbars="vertical" >

    <RelativeLayout
        android:id="@+id/upload_title"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/blue" >

        <ImageView
            android:id="@+id/upload_title_back"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/collectRoute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="@string/routeList"
            android:textColor="@color/white"
            android:textSize="30sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="20dp"
        android:text="start"
        android:textColor="#060"
        android:textSize="32dp"

        android:id="@+id/start_textView"
        android:layout_alignParentTop="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@+id/start_textView"
        android:layout_centerHorizontal="true"

        android:textSize="32dp"
        android:textColor="#060"
        android:text="@string/arrow_textview"
        android:id="@+id/to_textView"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@+id/to_textView"
        android:layout_marginRight="20dp"
        android:layout_alignParentRight="true"
        android:textColor="#060"
        android:text="end"
        android:textSize="32dp"

        android:id="@+id/end_textView"

        />
    <ListView
        android:layout_width="wrap_content"
        android:layout_height="400dp"
        android:layout_below="@+id/end_textView"
        android:layout_marginTop="30dp"
        android:id="@+id/listView"
        android:layout_centerHorizontal="true"
       />
    </RelativeLayout>
</LinearLayout>
