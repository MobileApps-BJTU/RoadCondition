<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ang.roadcondition" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CollectActivity"
            android:label="@string/title_activity_collect" >
        </activity>
        <activity
            android:name=".QueryRouteActivity"
            android:label="@string/title_activity_query_route" >
        </activity>
        <activity
            android:name=".RouteInfoActivity"
            android:label="@string/title_activity_routes_info" >
        </activity>
        <activity
            android:name=".Routes_listActivity"
            android:label="@string/title_activity_routes_list" >
        </activity>
    </application>

</manifest>
